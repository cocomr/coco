<package name="Example 0">
	<log>
        <!-- <file>path/to/config/file</file> -->
        <levels>0 1 2 3 4</levels>
        <outfile>log2.txt</outfile>
        <types>debug err log</types>
    </log>
    <paths>
        <path>/home/pippo/Libraries/coco/build/lib/</path>
        <path>/home/pippo/Libraries/coco/samples</path>
        <path>/home/pippo/Libraries/coco/samples/launch_files</path>
    </paths>
    <includes>
    	<include>config_include.xml</include>
	</includes>
    <components>
    	<component>
			<task>EzTask2</task>
			<library>component_2</library>
			<attributes>
				<attribute name="c" value="2" />
				<attribute name="d" value="3.3" />
			</attributes>
		</component>
    	
    	<component>
			<task>EzTask1</task>
			<library>component_1</library>
			<attributes>
				<attribute name="a" value="0" />
				<attribute name="b" value="1.3" />
				<attribute name="vec" value="1, 2,3,  5" />
			</attributes>
			<components>
				<component>
					<task>EzTask3</task>
					<library>component_1</library>
					<attributes>
					</attributes>
				</component>
			</components>
		</component>
		<component>
			<name>Task4</name>
			<task>EzTask4</task>
			<library>component_1</library>
		</component>
		<component>
			<task>EzTask4</task>
			<library>component_1</library>
		</component>
	</components>

	<connections>
		<connection data="BUFFER" policy="LOCKED" transport="LOCAL" buffersize="10">
			<src task="EzTask1" port="OUT"/>
			<dest task="EzTask2" port="IN"/>
		</connection>		
		<connection data="BUFFER" policy="LOCKED" transport="LOCAL" buffersize="10">
			<src task="EzTask1" port="OUT"/>
			<dest task="Task2" port="IN"/>
		</connection>			
	</connections>

    <activities>
    	<activity>
    		<schedule activity="parallel" type="periodic" value="1000" exclusive_affinity="2" />
			<components>
				<component name="EzTask1" />
				<component name="EzTask4" />
			</components>
		</activity>
		<activity>
			<schedule activity="parallel" type="triggered" value="" exclusive_affinity="1" />
			<components>
				<component name="EzTask2" />
			</components>
		</activity>
	</activities>
</package>	