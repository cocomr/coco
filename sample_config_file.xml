
<package>
    <description brief="AR comoponents system">
        This package contains the components of the AR package
    </description>
    <author>Filippo Brizzi</author>
    <components>
        <component>
            <task>ReceiverTask</task>
            <library>ReceiverTask</library>
            <attributes>
                <attributes name="w" value="640" />
                <attributes name="h"  value="480" />    
                <attributes name="RGB_SIZE" value="921000" />
                <attributes name="DEPTH_SIZE" value="614400" />
                <attributes name="address" value="127.0.0.1" />
                <attributes name="port" value="11000" />
            </attributes>
        </component>
        <component>
            <task>FrameHandlerTask</task>
            <library>FrameHandler</library>
            <attributes>
                <attributes name="w" value="640" />
                <attributes name="h" value="480" /> 
                <attributes name="distance" value="3" />
                <attributes name="calibration_file" value="calibration_skanect.yml" />
            </attributes>
        </component>
        <component>
            <task>LeapControllerTask</task>
            <library>LeapController</library>
            <attributes/>
        </component>
        <component>
            <task>GLManagerTask</task>
            <library>OpenGLTask</library>
            <attributes>
                <attributes name="w" value="640" />
                <attributes name="h" value="480" /> 
                <attributes name="is_input_leap" value="1" />
                <attributes name="pos_port_num" value="0" />
                <attributes name="v_mode" value="0" />
                <attributes name="calibration_file" value="" />
                <attributes name="scene_vertex" value="" />
                <attributes name="scene_geometry" value="" />
                <attributes name="scene_fragment" value="" />
                <attributes name="num_objs" value="1" />
                <attributes name="input_index_0" value="-1" />
                <attributes name="obj_file_0" value="" />
                <attributes name="texture_file_0" value="" />
                <attributes name="vertex_file_0" value="" />
                <attributes name="geometry_file_0" value="" />
                <attributes name="fragment_file_0" value="" />
            </attributes>
        </component>
    </components>
    <connections>
        <connection data="DATA" policy="LOCKED" transport="LOCAL" buffersize="1">
            <src task="ReceiverTask" port="frameOUT"/>
            <dest task="FrameHandlerTask" port="kbuffersIN"/>
        </connection>
        <connection data="DATA" policy="LOCKED" transport="LOCAL" buffersize="1">
            <src task="FrameHandlerTask" port="meshOUT"/>
            <dest task="GLManagerTask" port="meshIN"/>
        </connection>
        <connection data="DATA" policy="LOCKED" transport="LOCAL" buffersize="1">
            <src task="GLManagerTask" port="calibretionOUT"/>
            <dest task="FrameHandlerTask" port="calibrationIN"/>
        </connection>
        <connection data="DATA" policy="LOCKED" transport="LOCAL" buffersize="1">
            <src task="GLManagerTask" port="calibretionOUT"/>
            <dest task="FrameHandlerTask" port="calibrationIN"/>
        </connection>
        <connection data="DATA" policy="LOCKED" transport="LOCAL" buffersize="1">
            <src task="LeapControllerTask" port="leapOUT"/>
            <dest task="GLManagerTask" port="leapIN"/>
        </connection>
    </connections>
</package>


